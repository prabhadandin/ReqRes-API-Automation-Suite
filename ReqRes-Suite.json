          "name": "Create User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\",function(){\r",
                  "var jsonData=pm.response.json();\r",
                  "if (jsonData && jsonData.id) {\r",
                  "     pm.environment.set(\"new_user_id\", jsonData.id);    \r",
                  "}\r",
                  "else\r",
                  "{   pm.expect.fail(\"Response body does not contain an 'id' property to set the EmployeeID.\");\r",
                  " }\r",
                  "});\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
