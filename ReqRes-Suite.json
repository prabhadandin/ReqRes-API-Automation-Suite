              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {\r",
                  "    pm.response.to.have.status(200);\r",
                  "});\r",
                  "const jsonData = pm.response.json();\r",
                  "const user = jsonData.data || jsonData; \r",
                  "\r",
                  "\r",
                  "pm.test(\"Check if User details is updated\", function () {\r",
                  "    pm.expect(user.name.trim()).to.eql(\"Prabha\");\r",
                  "    pm.expect(user.job.trim()).to.eql(\"Data Analyst\");\r",
                  "});\r",
                  "\r",
                  "console.log(\"Updated User Data:\", user);"
                ],
